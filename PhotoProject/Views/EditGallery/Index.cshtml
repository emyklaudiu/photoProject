@using PhotoProject.Models;
@{
    ViewBag.Title = "Index";    
}

<h2>Edit gallery</h2>

@using (Html.BeginForm("Upload", "EditGallery", FormMethod.Post,
                                      new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="fileUpload btn btn-primary">
            <span>Upload</span>
            <input type="file" id="uploadBox" name="file" class="upload" />
        </div>

        <input type="submit" id="uploadFile" value="Upload"/>
    </fieldset>

    Html.RenderPartial("~/Views/EditGallery/_ImageItem.cshtml");
}

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>  
    $(document).ready(function () {
        $('#uploadFile').hide();
    });

    $('#uploadBox').change(function () {
        if ($('#uploadBox').val() != "") {
            $('#uploadFile').show();
        }
        else {
            $('#uploadFile').hide();
        }
    });

</script>